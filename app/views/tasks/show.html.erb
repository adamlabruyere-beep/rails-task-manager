<div class="container">
  <div class="btn btn-success">
    <%= link_to "edit", edit_task_path %>
  </div>

  <h2><%= @task.title %></h2>
  <p><%= @task.details %></p>
  <p><%= @task.completed %></p>

  <div class="btn btn-info">
    <%= link_to "Back", tasks_path %>
  </div>

  <div class="btn btn-danger">
    <%= link_to "Delete",
      task_path(@task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  </div>
</div>
